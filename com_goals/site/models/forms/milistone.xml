<?xml version="1.0" encoding="utf-8"?>
<form
	addfieldpath="/administrator/components/com_goals/models/fields"
>
	<fieldset name="details" label="COM_GOALS_FIELDSET_MILISTONE_DETAILS"
	>
		<field	name="id"	type="hidden" />
		
		<field
			name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description=""
			size="40"
			class="inputbox"
			required="true"
			default=""
		/>
			
		<field
			name="description"
			type="textarea"
			label="COM_GOALS_TASK_DESCRIPTION"
			class="inputbox"
			cols="30"
			rows="6"
		/>
				
		<field
			name="gid"
			type="goal"
			noscript="true"	 
			label="COM_GOALS_TASK_SELECT"	
			required="true"		
		/>

        <field
                name="value"
                type="text"
                label="COM_GOALS_TASK_VALUE"
                class="inputbox"
                size="10"
                />

        <field
                name="duedate"
                type="calendar"
                size="30"
                format="%Y-%m-%d"
                label="COM_GOALS_TASK_DUEDATE"
                />
        <field
                name="status"
                type="hidden"
                class="btn-group"
                default="0"
                label="COM_GOALS_TASK_STATUS"
                description="">
        </field>


    </fieldset>
</form>

