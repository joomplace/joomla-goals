<?xml version="1.0" encoding="utf-8"?>
<form
	addfieldpath="/administrator/components/com_goals/models/fields"
>
	<fieldset name="details" label="COM_GOALS_FIELDSET_MILISTONE_TEMPLATE_DETAILS"
	>
		<field	name="id"	type="hidden" />
		
		<field
			name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description=""
			size="40"
			class="inputbox"
			required="true"
			default=""
		/>
			
		<field
			name="description"
			type="editor"
			label="COM_GOALS_TASK_DESCRIPTION"
			class="inputbox"
			cols="20"
			rows="8"
			filter="raw"
		/>
				
		<field
			name="gid"
			type="goalstemplates"
			noscript="true"	 
			label="COM_GOALS_GOALTEMPLATE_SELECT"
			required="true"		
		/>

        <field
                name="value"
                type="text"
                label="COM_GOALS_TASK_VALUE"
                class="inputbox"
                size="10"
                />

		<field
			name="daysto"
			type="text"
			size="30"
            description="COM_GOALS_DAYS_FROM_START_DESC"
			label="COM_GOALS_PERIOD"
		/>		
		<field
            name="status"
            type="radio"
            class="btn-group"
            default="0"
            label="COM_GOALS_TASK_STATUS"
            description="">
            <option
                value="0">COM_GOALS_MILISTONE_NOTCOMPLETE</option>
            <option
                value="1">COM_GOALS_MILISTONE_COMPLETE</option>
        </field>				
		
		
	</fieldset>
</form>

