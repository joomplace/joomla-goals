<?xml version="1.0" encoding="utf-8"?>
<form
	addfieldpath="/administrator/components/com_goals/models/fields"
>
	<fieldset name="details" label="COM_GOALS_FIELDSET_PLANTEMPLATE_DETAILS"
	>
		<field	name="id"	type="hidden" />
		
		<field
			name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description="COM_GOALS_GOAL_TITLE_DESC"
			size="40"
			class="inputbox"
			required="true"
			default=""
		/>
		
		
		<field
			name="cid"
			type="sql"
			label="COM_GOALS_TASK_CAT"
			description="COM_GOALS_GOAL_CAT_DESC"
			query="SELECT id, title FROM #__goals_categories"
			key_field="id"
			value_field="title"
			class="inputbox"
			required="true"
			default=""
		/>
		
		<field
			name="description"
			type="editor"
			label="COM_GOALS_DESCRIPTION"
			description="COM_GOALS_DESCRIPTION_DESC"
			class="inputbox"
			cols="40"
			rows="8"
		/>

		
		<field
			name="period"
			type="text"
			label="COM_GOALS_PERIOD_PERIOD"
			description="COM_GOALS_PLAN_PERIOD_DESC"
			size="40"
			class="inputbox"
			default="0"
		/>


        <field
                name="finish"
                type="text"
                label="COM_GOALS_FINISH"
                description="COM_GOALS_FINISH_DESC"
                size="40"
                class="inputbox"
                default=""
                required="true"
                />
        <field
			name="metric"
			type="text"
			label="COM_GOALS_METRIC"
			description="COM_GOALS_METRIC_DESC"
			size="40"
			class="inputbox"
			default=""
		/>	

		<field 
			name="image" 
			type="cimage"
			directory="com_goals"
			default="images/com_goals/"
			hide_default="yes"
			size="20" 
			label="COM_GOALS_IMAGE"
			description="COM_GOALS_IMAGE_DESC" 
		/>
		
		<field
			name="planuserfields"
			type="plancustomfields"
			label="COM_GOAL_USER_CASTOM_FIELDS"	
			multiple="multiple" 
			description="COM_GOAL_USER_CASTOM_FIELDS_DESC"	
			size="4"	
			class="gl_custom_group"	
			default=""
		/>
		
	</fieldset>
</form>

