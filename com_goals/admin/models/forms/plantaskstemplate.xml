<?xml version="1.0" encoding="utf-8"?>
<form
	addfieldpath="/administrator/components/com_goals/models/fields"
>
	<fieldset name="details" label="COM_GOALS_FIELDSET_PLANTASKTEMPLATE_DETAILS"
	>
		<field	name="id"	type="hidden" />

		<field
			name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description=""
			size="40"
			class="inputbox"
			required="true"
			default=""
		/>

		<field
			name="description"
			type="editor"
			label="COM_GOALS_TASK_DESCRIPTION"
			class="inputbox"
			cols="20"
			rows="8"
		/>

		<field
			name="value"
			type="text"
			label="COM_GOALS_TASK_VALUE"
			class="inputbox"
			size="10"
		/>

		<field
			name="period"
            description="COM_GOALS_PLANTASK_PERIOD_DESC"
			type="text"
			size="30"
			label="COM_GOALS_PERIOD"
		/>

		<field
			name="sid"
			type="stagestemplates"
			label="COM_GOALS_PLANTASK_SELECT"
			required="true"
		/>
        <field
            name="status"
            type="radio"
            class="btn-group"
            default="1"
            label="COM_GOALS_TASK_STATUS"
            description="">
            <option
                value="0">COM_GOALS_MILISTONE_NOTCOMPLETE</option>
            <option
                value="1">COM_GOALS_MILISTONE_COMPLETE</option>
        </field>	

	</fieldset>
