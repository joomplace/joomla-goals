<?xml version="1.0" encoding="utf-8"?>
<form
	addfieldpath="/administrator/components/com_goals/models/fields"
>
	<fieldset name="details" label="COM_GOALS_FIELDSET_TASK_DETAILS"
	>
		<field	name="id"	type="hidden" />
		
		<field
			name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description=""
			size="40"
			class="inputbox"
			required="true"
			default=""
		/>
			
		<field
			name="description"
			type="editor"
			label="COM_GOALS_TASK_DESCRIPTION"
			class="inputbox"
			cols="20"
			rows="8"
		/>
		
		<field
			name="value"
			type="text"
			label="COM_GOALS_TASK_VALUE"
			class="inputbox"
			size="10"
		/>
				
		<field
			name="date"
			type="calendar"
			size="30"
			label="COM_GOALS_TASK_DUEDATE"			
		/>		
			
		<field
			name="gid"
			type="goal"
			label="COM_GOALS_TASK_SELECT"	
			required="true"	
		/>
		
	</fieldset>
